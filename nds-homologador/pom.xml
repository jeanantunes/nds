				<version>2.6</version>
				<executions>
					<execution>
						<goals>
							<goal>integration-test</goal>
							<goal>verify</goal>
						</goals>
						<configuration>
                            <includes>
                                <include>**/integration/**</include>
                            </includes>
                        </configuration>
					</execution>
				</executions>
			</plugin>
            
